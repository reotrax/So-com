<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/user_icon"
        android:src="@drawable/abc_action_bar_item_background_material"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/username"
        android:text="TextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_icon"
        android:layout_toRightOf="@+id/user_icon"
        />

    <TextView
        android:id="@+id/tweet"
        android:autoLink="web"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/user_icon"
        android:layout_toEndOf="@+id/user_icon"/>

    <TextView
        android:id="@+id/tweet_time"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/username"
        android:layout_toEndOf="@+id/username"
        android:layout_above="@+id/tweet"
        android:layout_toRightOf="@+id/username"/>

    <TextView
        android:id="@+id/retweet_user"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet"
        android:layout_toRightOf="@+id/user_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>